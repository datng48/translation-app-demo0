generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Translation {
  id             Int      @id @default(autoincrement())
  srcText        String
  srcLanguage    String
  targetText     String
  targetLanguage String
  createdAt      DateTime @default(now())
  userId         String?
}

model DictionaryEntry {
  id           Int      @id @default(autoincrement())
  word         String
  definition   String
  language     String
  partOfSpeech String?
  examples     String?
  createdAt    DateTime @default(now())

  @@unique([word, language])
}